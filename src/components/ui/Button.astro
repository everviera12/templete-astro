---
const { link, label, bgButton, bgButtonHover, txtButton, txtHover } = Astro.props;
---
<a 
    href={link || '#'}
    class="outline-none cursor-pointer border-none px-7 py-3 relative inline-block tracking-tighter rounded-full overflow-hidden"
    style=`
        background-color: ${bgButtonHover}; 
        color: ${txtButton}; 
        --button-hover: ${txtHover}; 
        --bg-button-hover: ${bgButton}
    `
    >
    <span class="relative transition-all duration-500 text-xl"> { label } </span>
</a>

<style>

    a:hover span {
        /* color: white; */
        color: var(--button-hover);
    }

    a::before,
    a::after {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
    }

    a::before {
        content: "";
        background: var(--bg-button-hover);
        width: 120%;
        left: -10%;
        transform: skew(30deg);
        transition: transform 0.4s cubic-bezier(0.3, 1, 0.8, 1);
    }

    a:hover::before {
        transform: translate3d(100%, 0, 0);
    }
</style>
